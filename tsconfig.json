{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@lib/*": ["src/lib/*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "outDir": "./dist/",
    "strict": true,
    "allowJs": true
  }
}
